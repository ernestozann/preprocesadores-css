-var titulo = "Titulo Principal"
-var titulos = ["Titulo Principal", "Subtitulo 1", "Subtitulo 2", "Subtitulo 3"]
mixin caja(imagen,titulo,contenido)
	.caja 
		.caja__imagen: img(src="./images/"+imagen, alt="IMAGEN ROTA")
		.caja__contenido 
			h3=titulo
			p=contenido 
			a.boton Leer mas
//- -var usuario = "Eru"
doctype html
html
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="./css/ejercicio-pug.css")
		title Curso preprocesadores 
	body 
		header 
			h1 Platzi games 
			if usuario 
				a Hola #{usuario} 
			else 
				a.boton Registro
		section.intro 
			.intro__imagen: img(src="./images/imagen.png", alt="IMAGEN ROTA")
			.intro__contenido
				h2 #{titulos[0]}
				p
					| Lorem, ipsum dolor sit amet consectetur adipisicing elit. 
					| Quasi sint qui possimus labore quae laborum fuga in accusantium, 
					| laudantium tempore maxime exercitationem quod odio tempora ab 
					| cum voluptatibus voluptate dolor.
					span Proin sed urna quis orci interdum rutrum. integer rhoncus finibus nunc, ac porttitor ex dapibus ac.
				a.boton Leer mas
		main.contenido 
			+caja('imagen.png',titulos[1],'Lorem, ipsum dolor sit amet')
			+caja('imagen.png',titulos[2],'Lorem, ipsum dolor sit amet')
			+caja('imagen.png',titulos[3],'Lorem, ipsum dolor sit amet')